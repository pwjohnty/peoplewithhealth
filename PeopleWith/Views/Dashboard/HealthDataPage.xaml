<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PeopleWith.HealthDataPage"
             Title="HealthDataPage">
    <VerticalStackLayout>

        <Image Source="healthtransfer.png" Margin="0,20,0,0" HorizontalOptions="Center" VerticalOptions="Start" HeightRequest="150"/>


        <Label 
            x:Name="stepslbl"   FontSize="10" TextColor="Red"
            VerticalOptions="StartAndExpand" 
            HorizontalOptions="Start" />


        <Label 
      x:Name="hrlbl"   FontSize="10" TextColor="Green"
      VerticalOptions="StartAndExpand" 
      HorizontalOptions="Start" />
        
        


        <Button Text="Heart Rate" Margin="0,10,0,10" FontFamily="HankenGroteskBold"  VerticalOptions="Center" HorizontalOptions="Fill" Clicked="Button_Clicked"/>


        <Label 
      x:Name="actlbl"   FontSize="10" TextColor="Blue"
      VerticalOptions="StartAndExpand" 
      HorizontalOptions="Start" />


        <Button Text="Activity" Margin="0,10,0,10" FontFamily="HankenGroteskBold"  VerticalOptions="Center" HorizontalOptions="Fill" Clicked="Button_Clicked_1"/>

 
    </VerticalStackLayout>
</ContentPage>
                <syncfusion:SfListView x:Name="AllDataLV" Margin="0,5,0,0" AutoFitMode="DynamicHeight" MaximumHeightRequest="400" ItemTapped="AllDataLV_ItemTapped" SelectionMode="Single" SelectionBackground="Transparent">

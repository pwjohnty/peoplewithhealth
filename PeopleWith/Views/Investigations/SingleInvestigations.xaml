<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:syncfusion="clr-namespace:Syncfusion.Maui.ListView;assembly=Syncfusion.Maui.ListView"
             x:Class="PeopleWith.SingleInvestigations" NavigationPage.IconColor="#031926"  BackgroundColor="White">
    <ContentPage.ToolbarItems>
        <ToolbarItem x:Name="EditBtn" Text="Edit"  Clicked="EditBtn_Clicked"  />
    </ContentPage.ToolbarItems>
    <ScrollView VerticalScrollBarVisibility="Never">
        <StackLayout >
            <Border StrokeShape="RoundRectangle 10" InputTransparent="True" Padding="5" Stroke="Transparent" BackgroundColor="#F5E6E8"  Margin="20,20,20,5">
                <Grid >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>

                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="50*"/>
                        <ColumnDefinition Width="50*"/>
                    </Grid.ColumnDefinitions>

                    <Label x:Name="Investtitle" Margin="10,0,0,0" FontFamily="HankenGroteskBold"  FontSize="20" VerticalOptions="End" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"  TextColor="#031926" />

                    <Label  FontFamily="HankenGroteskBold" HorizontalTextAlignment="Start"  Margin="10,10,0,0" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2">
                        <Label.FormattedText>
                            <FormattedString>
                                <Span Text="Date Added: " TextColor="Gray" FontSize="12" FontFamily="HankenGroteskRegular" />
                                <Span x:Name="lblStart" TextColor="#031926" FontSize="12" FontFamily="HankenGroteskBold" />
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>
                </Grid>
            </Border>


            <Button BackgroundColor="#2C2E43" x:Name="AddDataBtn" Clicked="AddDataBtn_Clicked" HorizontalOptions="FillAndExpand" TextColor="White"  FontAttributes="None" Margin="20,20,20,0" FontFamily="HankenGroteskBold" Text="Add Notes" />



            <StackLayout x:Name="InvestNotesInsights" Margin="20,10,20,0" >

                <Label Text="Investigation Notes" Margin="0,20,0,0" FontFamily="HankenGroteskBold"  FontSize="20" VerticalOptions="Center" TextColor="#031926" />
                <Label  FontFamily="HankenGroteskRegular" TextColor="Gray" Text="Tap on a note below to edit or delete it as needed." HorizontalTextAlignment="Start" FontSize="14"  Margin="0,0,0,0" />

                <syncfusion:SfListView  x:Name="AllInvestNotes" ItemTapped="AllInvestNotes_ItemTapped" Padding="0" Margin="0,5,0,0" AutoFitMode="Height" ItemSpacing="0" BackgroundColor="Transparent" HorizontalOptions="FillAndExpand" IsScrollingEnabled="False"  SelectionBackground="Transparent" ScrollBarVisibility="Never" Orientation="Vertical" >
                    <syncfusion:SfListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <Border StrokeShape="RoundRectangle 10"  InputTransparent="True" Padding="5" Stroke="Transparent" Opacity="1" BackgroundColor="#F5E6E8"  Margin="10,0,10,5">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="25"/>
                                            <RowDefinition Height="Auto"/>

                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <Label Text="{Binding datetime}" FontFamily="HankenGroteskBold" VerticalOptions="Start" Margin="10,0,0,0" HorizontalOptions="Start" FontSize="12" Grid.Row="0"  TextColor="DarkGray" />
                                        <Label Text="{Binding notes}" FontFamily="HankenGroteskRegular" VerticalOptions="Start" Margin="10,0,0,0" HorizontalOptions="Start" FontSize="12" Grid.Row="1" TextColor="#031926" />



                                    </Grid>
                                </Border>

                            </ViewCell>
                        </DataTemplate>
                    </syncfusion:SfListView.ItemTemplate>
                </syncfusion:SfListView>

            </StackLayout>

            <Label Text="Details" Margin="20,20,0,0" FontFamily="HankenGroteskBold"  FontSize="20" VerticalOptions="Center" TextColor="#031926" />
            <Border Stroke="#E5E5E5" StrokeShape="RoundRectangle 10" Padding="20" BackgroundColor="Transparent" Margin="10,10,10,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="90*"/>
                        <ColumnDefinition Width="10*"/>
                    </Grid.ColumnDefinitions>
                    <Label Text="Information and Resources" Margin="0,0,0,0" Grid.Column="0" FontFamily="HankenGroteskBold"  FontSize="16" VerticalOptions="Center" TextColor="#031926" />
                    <Image  Source="backbutton.png" Grid.Column="1" Rotation="180" VerticalOptions="Center" HorizontalOptions="Center" HeightRequest="15" WidthRequest="15" />
                </Grid>
                <Border.GestureRecognizers>
                    <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped" NumberOfTapsRequired="1"/>
                </Border.GestureRecognizers>
            </Border>

            <Button x:Name="Deletebtn" Margin="20,50,20,0" FontSize="14" TextColor="Red" BackgroundColor="#ffe5e5" FontFamily="HankenGroteskBold" CornerRadius="10" Text="Delete Investigation" Clicked="Deletebtn_Clicked" />
            <Label HorizontalTextAlignment="Start" Text="If this Investigation is deleted, you will lose all of your Investigation Data" Margin="20,5,20,20" FontFamily="HankenGroteskRegular" VerticalOptions="Center" HorizontalOptions="Center" FontSize="10" TextColor="DarkGray"  />

        </StackLayout>

    </ScrollView>
</ContentPage>